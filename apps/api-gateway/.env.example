# API Gateway Environment Variables
PORT=3000
CORS_ORIGIN=http://localhost:3000

# RS256 Public Key (same key as auth-service uses for signing)
# Paste the full PEM, replacing newlines with \n
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"

# Downstream service URLs (Docker Compose network names or EC2 private IPs)
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3003
PRODUCT_SERVICE_URL=http://product-service:3004
INVENTORY_SERVICE_URL=http://inventory-service:3005
CART_SERVICE_URL=http://cart-service:3006
ORDER_SERVICE_URL=http://order-service:3007
PAYMENT_SERVICE_URL=http://payment-service:3008
ADMIN_SERVICE_URL=http://admin-service:3010

# Shared secret for internal service-to-service tokens (HMAC-SHA256)
INTERNAL_SERVICE_SECRET=CHANGE_ME_TO_A_RANDOM_64_CHAR_STRING

# Redis
REDIS_URL=redis://redis:6379
