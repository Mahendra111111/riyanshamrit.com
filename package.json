{
  "name": "ayurveda-ecommerce",
  "version": "0.0.1",
  "private": true,
  "description": "Production-grade hybrid microservices Ayurveda e-commerce platform",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --concurrency 20",
    "dev:services": "turbo run dev --filter=!@ayurveda/web --concurrency 20",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.5.0",
    "rimraf": "^6.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
